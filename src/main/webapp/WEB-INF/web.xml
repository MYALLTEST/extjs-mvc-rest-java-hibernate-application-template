<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	metadata-complete="false">

	<context-param>
		<param-name>resteasy.providers</param-name>
		<param-value>com.bitfiction.mvctemplate.util.DefaultExceptionHandler</param-value>
	</context-param>
	<security-role>
		<role-name>user</role-name>
	</security-role>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>ExtjsMVCTemplateRealm</web-resource-name>
			<url-pattern>/json/*</url-pattern>
			<url-pattern>/rest/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>
	<filter>
		<filter-name>UTF8Filter</filter-name>
		<filter-class>com.bitfiction.mvctemplate.util.UTF8Filter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UTF8Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<session-config>
		<session-timeout>20</session-timeout>
	</session-config>

</web-app>

